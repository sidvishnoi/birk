{
  "env": {
    "browser": true,
    "commonjs": false,
    "es6": true,
    "node": true,
    "jest/globals": true
  },
  "root": true,
  "extends": [
    "eslint:recommended"
  ],
  "plugins": ["jest"],
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "rules": {
    "no-tabs": "error",
    "max-len": ["error", {
      "code": 80,
      "comments": 200
    }],
    "no-unused-vars": 2,
    "no-console": ["error", {
      "allow": ["warn", "error"]
    }],
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "double",
      {
        "avoidEscape": true
      }
    ],
    "semi": [
      "error",
      "always"
    ],
    "prefer-const": "error"
  }
}
